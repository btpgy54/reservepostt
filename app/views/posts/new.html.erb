<div class="posts-doc-contents">
  <header class="posts-doc-header">
    <%#= link_to image_tag('furima-logo-color.png' , size: '185x50'), "/" %>

  </header>
  <div class="posts-doc-main">
    <h2 class="posts-doc-title">画像の情報を入力</h2>
    <%= form_with url: "/posts", method: :post, local: true do |f| %>

    <%# インスタンスを渡して、エラー発生時にメッセージが表示されるようにしましょう。%>
    <%# render 'shared/error_messages', model: f.object %>
    <%# //インスタンスを渡して、エラー発生時にメッセージが表示されるようにしましょう。%>

    <div class="img-upload">
      <div class="weight-bold-text">
        資料画像
        <span class="indispensable">必須</span>
      </div>
      <div class="click-upload">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= f.file_field :image, id:"post-image" %>
      </div>
    </div>
  
    <div class="new-posts">
      <div class="weight-bold-text">
        タイトル
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :title, class:"posts-text", id:"post-title", placeholder:"タイトル（必須 40文字まで)", maxlength:"40" %>
      <div class="posts-explain">
        <div class="weight-bold-text">
          画像の説明
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :description, class:"posts-text", id:"post-info", placeholder:"画像の説明（必須 1,000文字まで）（資料画像など）例）講座で配布されたものです。" ,rows:"7" ,maxlength:"1000" %>
      </div>
    </div>

    <div class="posts-detail">
      <div class="weight-bold-text">画像の詳細</div>
      <div class="form">
        <div class="weight-bold-text">
          日時
          <span class="indispensable">必須</span>
        </div>
        <%= f.date_field :date, class:"date-input", id:"date", placeholder:"2000/10/10" %>
        <div class="weight-bold-text">
          クラブ名/講座名
          <span class="indispensable">必須</span>
        </div>
        <%#= f.collection_select(:club_id, Club.all, :id, :name, {}, {class:"select-box", id:"post-club"}) %>
      </div>
    </div>
  
    <div class="post-btn-contents">
      <%= f.submit "投稿する" ,class:"post-btn" %>
      <%=link_to 'もどる', root_path, class:"back-btn" %>
    </div>
  </div>
  <% end %>

  <footer class="posts-doc-footer">
    <ul class="menu">
      <li><a href="#">HOME</a></li>
      <li><a href="#">クラブ/講座</a></li>
      <li><a href="#">予約</a></li>
    </ul>
    <%#= link_to image_tag('furima-logo-color.png' , size: '185x50'), "/" %>
    <p class="inc">
      ©︎〇〇町役場
    </p>
  </footer>
</div>
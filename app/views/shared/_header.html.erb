<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class='top-page-header'>
  <div class='search-bar-contents'>
    <%#= link_to image_tag("", class: ""), "/" %>
    <form class="search-form" action="#">
      <input class='input-box' placeholder='キーワードから探す'>
      <button class="search-button">
        <%#= image_tag "", class:"search-icon" %>
      </button>
    </form>
  </div>
  <div class='nav'>
    <ul class='lists-left'>
      <%= link_to '投稿一覧', posts_path, class: "post-list" %>
      <%= link_to 'クラブ/講座一覧', "#", class: "club-list" %>
      <%= link_to '予約一覧', "#", class: "reserve-list" %>
    </ul>
    <ul class='lists-right'>
      <% if user_signed_in? %>
        <%= link_to current_user.nickname, "#", class: "user-nickname" %>
        <%= link_to 'ログアウト', destroy_user_session_path, method: :delete, class: "logout" %>
      <% else %>
        <%= link_to 'ログイン', new_user_session_path, class: "login" %>
        <%= link_to '新規登録', new_user_registration_path, class: "sign-up" %>
      <% end %>
    </ul>
  </div>
</header>
